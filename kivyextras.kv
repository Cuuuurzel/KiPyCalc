#:kivy 1.0

<ColoredButton>:
    
	canvas:
		Color:
			rgb: self.color
		Rectangle:
			size: self.size[0]-self.m[0]*2, self.size[1]-self.m[1]*2
			pos: self.pos[0]+self.m[0], self.pos[1]+self.m[1]


<NumericUpDown>:
    txtvalue: txtvalue
    btnUp: btnup
    btnDown: btndown

    BoxLayout:
        orientation: 'horizontal'
            
        Button:
            id: btndown
            text: '<'
            size_hint: 0.2, 1
         
        TextInput:
            id: txtvalue
            text: str( root.value )
            size_hint: 0.6, 1
            multiline: False
            
        Button:
            id: btnup
            text: '>'
            size_hint: 0.2, 1
