#:kivy 1.0

<ColoredButton>:
    
	canvas:
		Color:
			rgb: self.color
		Rectangle:
			size: self.size
			pos: self.pos

<NumericUpDown>:
    txtvalue: txtvalue
    btnUp: btnup
    btnDown: btndown

    BoxLayout:
        orientation: 'horizontal'
            
        Button:
            id: btndown
            text: '<'
            size_hint: 0.2, 1
         
        TextInput:
            id: txtvalue
            text: str( root.value )
            size_hint: 0.6, 1
            multiline: False
            
        Button:
            id: btnup
            text: '>'
            size_hint: 0.2, 1
