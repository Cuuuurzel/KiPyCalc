#:kivy 1.7

<Plotter>:
	lblPoints: lblPoints

    canvas:
        Color: 
            rgb: 0, 0, 0, 1
        Rectangle:
            pos: 0,0
            size: self.size

        Color: 
            rgb: self.plotColor
        Line:
            width: 1
            points: self.points

        Color: 
            rgb: self.axisColor
        Line:
            width: 1
            points: [ -self.xRange[0]*self.ppx, 0, -self.xRange[0]*self.ppx, self.height ]
        Line:
            width: 1
            points: [ 0, -self.yRange[0]*self.ppy, self.width, -self.yRange[0]*self.ppy ]
	Label:
		id: lblPoints
		pos: self.parent.width-5*self.width/3, self.parent.height-self.height


<SpecialPoint>:
	lbl: lbl

	canvas:
		Color:
			rgb: self.pcolor
		Point:
			pointsize: 2
			points: self.pos
		Color:
			rgba: self.lcolor
		Line:
			dash_length: 5
			dash_offset: 10
			width: self.lnw
			points: ( 0, self.pos[1], self.width, self.pos[1] )
		Line:
			dash_length: 5
			dash_offset: 10
			width: self.lnw
			points: ( self.pos[0], 0, self.pos[0], self.height )
	Label:
		id: lbl
		size: 30, 30
		pos: self.parent.pos
